<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.wwh.coolweather.app">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/logo"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.example.wwh.coolweather.app.activity.ChooseAreaActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.example.wwh.coolweather.app.activity.WeatherActivity">
        </activity>
        <service android:name="com.example.wwh.coolweather.app.service.AutoUpdateService" ></service>
        <receiver android:name="com.example.wwh.coolweather.app.receiver.AutoUpdateReciever"></receiver>

    </application>

</manifest>